<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" spacing="15.0"
      style="-fx-background-color: #ACAF70; -fx-border-style: solid;" xmlns="http://javafx.com/javafx/8"
      fx:controller="hu.unideb.snapszer.controller.MainFormController">
    <children>
        <Label alignment="TOP_CENTER" prefHeight="57.0" prefWidth="600.0" text="Kérem válasszon játékmódot!"
               textAlignment="CENTER">
            <font>
                <Font name="Times New Roman" size="26.0"/>
            </font>
        </Label>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                onMouseClicked="#onPlayerVSComputerClicked" prefHeight="30.0" prefWidth="300.0"
                text="Játékos vs. Számítógép" textAlignment="CENTER">
            <font>
                <Font name="Times New Roman" size="14.0"/>
            </font>
        </Button>
        <TextField fx:id="numberOfGamesTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                   minHeight="-Infinity"
                   minWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" promptText="Adja meg a játszmák számát!"/>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                onMouseClicked="#onComputerVSComputerClicked" prefHeight="30.0" prefWidth="300.0"
                text="Számítógép vs. Számítógép" textAlignment="CENTER">
            <font>
                <Font name="Times New Roman" size="14.0"/>
            </font>
        </Button>
    </children>
</VBox>
